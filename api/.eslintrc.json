{
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "script",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "node": true,
    "browser": false,
    "jest": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Promise": true
  },
  "rules": {
    "no-console": "off",
    "no-else-return": "warn",
    "no-return-await": "warn",
    "no-with": "error",
    "no-buffer-constructor": "error",
    "no-new-require": "error",
    "no-path-concat": "error",
    "no-process-exit": "error",
    "no-unused-vars": ["error", {
      "varsIgnorePattern": "^_.*",
      "argsIgnorePattern": "^_.*"
    }],
    "eol-last": ["error", "always"],
    "indent": ["error", 2],
    "semi": 0
  }
}